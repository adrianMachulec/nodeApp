<form method="GET">
    <div class="mt-3 mb-5 d-flex">
        <input
            class="form-control"
            type="text"
            name="q"
            value="<%- query.q %>"
        >
        <button class="btn btn-primary ms-2">Szukaj</button>
    </div>
</form>

<% if(query.q) { %>
    <p class="h5 mb-4">Wyniki wyszukiwania dla frazy <%- query.q %>:</p>
<% } %>